#!/bin/bash
#git recursive directories scripts - https://github.com/safrm/gr-scripts
#author: Miroslav Safr <miroslav.safr@gmail.com>
#shows local tags and if it was edited in subdirectories ./ or $1/ except those which are marked by "touch <dir>/.git/no_updates"
# -v shows the details
VERSION=NA                                                                   
VERSION_DATE=NA


while [ $# -gt 0 ]; do
  case "$1" in
    -v|--verbose) VERBOSE=1;;
	* )       PROJECT_DIR=$1;; 
  esac
  shift
done

if [ -z "$PROJECT_DIR" ]
then
	PROJECT_DIR="./"
fi

if [ ! -d "$PROJECT_DIR" ] 
then
  echo "directory $PROJECT_DIR does not exist";
  exit 1
fi

CWD=`pwd`
cd $PROJECT_DIR
PROJECT_DIR=`pwd`

find ./  -type d -name ".git*"  |  sed 's/\/.git//g' | while read ENTRY
do
#	if [ ! -f $ENTRY/.git/no_updates ]; then
		cd $ENTRY 
	        LASTTAG=`git describe --tags --dirty=*  2> /dev/null`
		BRANCH=`git branch | egrep "^\*" | cut -d' ' -f2`
                COMMITCOUNT=`git shortlog origin/$BRANCH..HEAD | grep -E '^[ ]+\w+' | wc -l`
                if [ "0" = "$COMMITCOUNT" ]
  		then
		        echo -e "\033[32m $ENTRY:\033[0m \033[34m $LASTTAG \033[0m (o/$BRANCH)"
                else
		        echo -e "\033[32m $ENTRY:\033[0m \033[34m $LASTTAG \033[0m (o/$BRANCH\033[33m+$COMMITCOUNT\033[0m)"
		fi

        	LASTMSG=`git log -1 --pretty=format:'%h %s | %ad' --date=relative`
	        echo -e "$LASTMSG"

                if [ ! -z "$VERBOSE" ]
      		then
		   git status -s
		fi
		cd $PROJECT_DIR
#	fi
done

TIME=`date +%H:%M:%S`
echo "gr-showlocal finished:$TIME"



